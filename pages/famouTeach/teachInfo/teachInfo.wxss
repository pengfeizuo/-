/* pages/famouTeach/teachInfo/teachInfo.wxss */
page{
    padding: 20rpx;
    font-size: 28rpx;
}
.l-item{
    overflow: hidden;
    /* border: 1px solid #c9c9c9; */
    margin-bottom: 20rpx;
    background: #282B30;
    padding: 10rpx 30rpx;
    position: relative;
}
.l-name{
   overflow: hidden;
   white-space:  nowrap;
   text-overflow:  ellipsis;
}
.l-img{
    float: left;
    width: 180rpx;
     height: 180rpx;
    position: relative;
}
.l-img .list-bg{
    width: 180rpx;
    height: 180rpx;
}
.audio-model{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
}
.a-no{
    width: 80rpx;
}
.a-art{
    width: 50rpx;
}
.l-info{
    margin-left: 180rpx;
    padding:0 40rpx;
    padding-left: 40rpx;
    box-sizing: border-box;
    padding-right: 0rpx;
}
.l-price{
   
   position: absolute;
   right: 10rpx;
   bottom: 0rpx;
   z-index: 1;
}
.l-price image{
width: 100rpx;
}
.l-price view{
    width: 100rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    color: #333;
    border-radius:4rpx; 
}
.l-time{
    overflow: hidden;
    width: 75%;
}
.l-time view:first-child{
    float: left
}
.l-time view:last-child{
    float: right
}
.progress{
    margin: 40rpx 0;
    height: 10rpx;
    width: 75%;
    background: #000;
    position: relative;
    border-radius:10rpx; 
}
.progress image{
    height: 10rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}
