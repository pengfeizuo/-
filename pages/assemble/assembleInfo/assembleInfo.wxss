/* pages/assemble/assembleInfo/assembleInfo.wxss */


.content{
    padding: 20rpx;
    box-sizing: border-box;
}
.l-item{
    overflow: hidden;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
    position: relative;
    background: #282B30;
    padding-left: 20rpx;
}
.l-img{
    float: left;
    width: 200rpx;
}
.l-img image{
    width: 100%;
    height: 160rpx;
}
.l-info{
    margin-left: 220rpx;
    padding:0 20rpx;
}
.l-name{
   overflow: hidden;
   white-space:  nowrap;
   text-overflow:  ellipsis;
}
.l-price{
    width: 140rpx;
    height: 50rpx;
    border-radius:4rpx; 
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform:  translateY(-50%);
    color: #333;
    line-height: 48rpx;
    text-align: center;
}
.l-time{
   position: absolute;
   bottom: 20rpx;
   left: 260rpx;
   font-size: 24rpx;
   text-decoration: underline;
}   
.progress{
    margin: 30rpx 0;
}
.progress text{
    color: rgb(248,214,161)
}
.t-surplus {
    text-align: center;
    font-size: 28rpx;
}
.t-surplus text{
    color: rgb(248,214,161)
}
.p-tit{
    text-align: center;
    font-size: 38rpx;
    color: rgb(248,214,161);
    font-weight: bold;
    margin-top: 40rpx;
}
.p-user{
    display: flex;
    padding: 40rpx 60rpx;
}
.p-user > view{
    flex: 1;
    position: relative;
    text-align: center;
}
.p-user .user-ph{
    width: 80rpx;
    height: 80rpx;
    border-radius:80rpx; 
}
.icon-img{
    position:absolute;
    bottom: 0rpx;
    width: 60rpx;
    left: 50%;
    transform: translateX(-50%)
}
.t-surplus .r-num{
    font-size: 32rpx
}
.canyu{
    width: 360rpx;
    display: block;
    margin: 40rpx auto;
    height: 74rpx;
    text-align: center;
    line-height: 74rpx;
    border-radius:4rpx;
    color: #333; 
    font-size: 32rpx;
    letter-spacing: 2rpx;
    font-weight: bold;
}
.jieshi{
    width: 90vw;
}
.p-More{
    width: 96vw;
    border-bottom: 2rpx solid #282B30;
    margin: auto;
    margin-top:40rpx; 
    overflow: hidden;
    padding: 0 8vw;
    box-sizing: border-box;
}
.p-More-item{
    width: 40%;
    padding-bottom: 40rpx;
}
.p-More > view:first-child{
    float: left;
}
.p-More > view:first-child{
    float: right;
}

.p-more-info{
    width: 100%;
    height: 160rpx;
    background: #282B30;
    margin-bottom: 10rpx;
}
.p-more-info image{
    width: 100%;
    height: 100%;
}
.p-shuo{
    padding: 30rpx;
    line-height: 48rpx;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    padding-bottom: 80rpx
}
.popup-qd{
    float: none;
    margin: auto;
}
.canyu{
    position: relative;
}
.canyu button{
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    bottom: 0;
    opacity: 0;
}
.loading{
    height: 100vh;
    width: 100%;
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.8);
    z-index: 99999;
}
.loading button{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 11;
}
.load-box{
    position: relative;
    z-index: 10
}
.load-box image{
    width: 120rpx;
}
.tabber-img{
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    z-index: 100
}
.bg{
    height: 24vh;
}
.bg image{
    height: 100%;
    width: 100%;
}
.pinend{
    background: #333;
    color: #333;
}