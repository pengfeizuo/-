/* pages/order/orderinfo/orderinfo.wxss */
.content{
    overflow: hidden;
    position: relative;
    padding: 60rpx 40rpx;
    box-sizing: border-box;
}
.content image{
    left: 0;
    top: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0
}
.o-left{
    width: 200rpx;
    color: #fff;
    position: relative;
    z-index: 1;
}
.o-left text{
    font-size: 70rpx;
   margin-top: 20rpx;
}

.o-right{
    z-index:2;
    position: absolute;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    right: 40rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #333;
    border-radius:6rpx; 
    font-weight: bold;
}