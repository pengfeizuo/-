/* pages/makeGb/makeGb.wxss */
.z-item{
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    border-bottom: 1px solid #333;
}
.z-label{
    width: 180rpx;
    text-align: center;
}
.z-info{
    flex: 1
}

.l-last{
    border: 0
}
.z-item view{
    position: relative;
}
.z-state{
    position: absolute;
    width: 100rpx;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%)
}
.z-state-btn{
    position: absolute;
    width: 100rpx;
    height: 44rpx;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    opacity: 0
}
.popup-box{
	border-radius: 10rpx;
	width: 76vw;
	height: auto;
	background: #282B30;
	overflow: hidden;
	box-sizing: border-box;
    margin: auto;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
}
.popup-box2{
    top: 50%
}
.popup-title{
    text-align: center;
    font-size: 40rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #333
}
.popup-center{
    padding: 40rpx 60rpx;
    text-align: justify;
    line-height: 48rpx;
    font-size: 32rpx;
    letter-spacing: 2rpx;
}
.popup-btn {
    overflow: hidden;
    padding: 40rpx 50rpx;
    padding-top: 20rpx;
    padding-bottom: 50rpx;
}
.popup-btn view{
    width: 45%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 6rpx;
}
.popup-qx{
    float: none;
    margin: auto;
    width: 80%;
    box-sizing: border-box;
    color: #333;
}
.popup-qd{
    float: none;
    margin: auto;
}
.i-bg image{
    width: 100%;
}
.i-center{
    padding: 0 10rpx;
}
.i-item{
    border-bottom:2rpx solid #333;
    height: 90rpx;
    line-height: 90rpx;
    position: relative;
    padding-left: 20rpx;
}
.i-item text,.i-item image{
    float: left;
}
.i-item .caozuo{
    position:absolute;
    right: 30rpx;
    height: 100%;
    top: 0rpx;
    /* line-height: 90rpx; */
}
.caozuo view{
    width: 100rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size:24rpx;
    border-radius:4rpx; 
    right:-30rpx;
}
.c-state{
    color: #333;
     
}
.caozuo .c-state1{
    border:1px solid #f8d6a1;
    height: 40rpx;
    line-height: 38rpx;
    width: 96rpx;
    position: relative;
}
.c-state1 button{
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 2;
    opacity: 0
}
.c-state2{
    background: #000;
    color: #fff
}
.y-logo{
    height: 60rpx;
    width: 60rpx;
    position: relative;
    top: 16rpx;
    margin: 0 20rpx;
}
.z-item .g-chang-bg{
    position:absolute;
    width:100rpx;
    right:30rpx;
    display: inline-block;
    text-align: center;
    height: 48rpx;
    line-height: 48rpx;
    top:50%;
    transform:translateY(-50%);
    border-radius:4rpx; 

}