/* pages/order/order.wxss */
.content{
    padding: 20rpx;
}
.l-item{
    overflow: hidden;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
    padding-left:20rpx; 
    position: relative;
    border-bottom:2rpx solid  #282B30;
}
.l-img{
    float: left;
    width: 140rpx;
}
.l-img image{
    width: 140rpx;
    height: 140rpx;
}
.l-info{
    margin-left: 140rpx;
    padding:0 40rpx;
    position: relative;
}
.l-price{
    width: 120rpx;
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform:  translateY(-50%)
}
.l-time{
   margin-top: 50rpx;
}   
.progress{
    margin: 40rpx 0;
}
.order-caozuo{
    position: absolute; 
    right: 20rpx;
    bottom: 40rpx;
    text-align: center;
}
.order-caozuo text{
    text-decoration: underline;
    margin-top: 6rpx
}
.stop{
    width: 100%;
    height: 2rpx;
    position: absolute;
    bottom: 2rpx;
    left: 0;
}