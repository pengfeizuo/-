.footer{
    position: fixed;
    width: 100%;
    height: 100rpx;
    left: 0;
    bottom: 0;
    text-align: center;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #333
}
.popup-box{
	border-radius: 10rpx;
	width: 76vw;
	height: auto;
	background: #282B30;
	overflow: hidden;
	/* position: relative; */
	box-sizing: border-box;
    margin: auto;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
}
.popup-title{
    text-align: center;
    font-size: 40rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #333
}
.popup-center{
    padding: 40rpx 60rpx;
    text-align: center;
    line-height: 48rpx;
    font-size: 32rpx;
    letter-spacing: 2rpx;
}
.popup-btn {
    overflow: hidden;
    padding: 40rpx 50rpx;
    padding-top: 20rpx;
    padding-bottom: 50rpx;
}
.popup-btn view{
    width: 45%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 6rpx;
}
.popup-qx{
    float: left;
    border: 1px solid #f8d6a1;
    box-sizing: border-box;
}
.popup-qd{
    float: right;
    color: #333;
}
.g-model{
    padding: 20rpx;
}
.g-model text{
    margin-right: 100rpx;
    
}
.g-model view{
    line-height: 44rpx;
    margin-top: 10rpx;
    text-align: justify;
}