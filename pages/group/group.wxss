/* pages/group/group.wxss */
.title{
    display: flex;
    background: #282B30;
    text-align: center;
    margin-top: 2rpx;
}
.title > view{
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    position: relative;
}
.title .txt-semll{
    flex: 1.1;
}
.title .flex-semll{
    flex: 0.6
}
.title .flex-big{
    flex: 1.1
}
.title > view::after{
    position: absolute;
    content: '';
    width: 2rpx;
    height: 40rpx;
    top: 20rpx;
    right: 0;
    background: #000;
}
.title > view:last-child::after{
    display: none
}
.g-list{
    display: flex;
    border-bottom:2rpx solid #333; 
    height: 100rpx;
}
.g-list > view{
    flex: 1;
    line-height: 100rpx;
    text-align: center;
   position: relative;
}
.g-list .flex-semll{
    flex: 0.6
}
.g-list .flex-big{
    flex: 1.1;
    color: rgb(245, 27, 42)
}
.g-list > view:first-child{
    line-height: 40rpx;
    padding-top: 10rpx;
}
.g-list .txt-semll{
    flex: 1.1;
}
.g-list image{
    position: absolute;
    width: 80%;
    height: 80%;
    top: 10%;
    left: 10%;
    z-index: 1
}
